        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorSecondaryText"
            android:orientation="vertical"
            android:layout_marginTop="-150dp">

            <com.google.android.material.card.MaterialCardView
                app:theme="@style/Theme.MaterialComponents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/colorSecondaryText"
                android:layout_margin="8dp"
                android:padding="10dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/colorSecondaryText"
                        android:src="@drawable/ic_outline_camera"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload a Profile Photo"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16sp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Email"
                        android:textSize="18sp"/>
                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Email"
                        android:inputType="text"
                        android:textColor="@color/colorPrimaryText"
                        android:textColorHint="@color/colorDivider"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Full Names"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/fullnames"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Fullnames"
                        android:inputType="text"
                        android:textColor="@color/colorDivider"
                        android:textColorHint="@color/colorDivider"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Username"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Username"
                        android:inputType="text"
                        android:textColor="@color/colorDivider"
                        android:textColorHint="@color/colorDivider"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Password"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Password"
                        android:inputType="numberPassword"
                        android:textColor="@color/colorDivider"
                        android:textColorHint="@color/colorDivider"
                        android:textSize="14sp"
                        app:passwordToggleEnabled="true" />

                    <Button
                        android:id="@+id/update"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Update"
                        android:textColor="@color/colorSecondaryText"
                        app:backgroundTint="@color/colorPrimaryDark" />


                </LinearLayout>

